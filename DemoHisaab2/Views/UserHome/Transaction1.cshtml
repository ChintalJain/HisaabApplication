@{
    ViewBag.Title = "Transation";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h2>Make Transation</h2>


@using (Html.BeginForm())
{

<div class="form-horizontal">
    <hr />
    <div class="form-group">
        <h3>@Html.Label("Select Debit Account Option ", htmlAttributes: new { @class = "control-label col-md-4" })</h3>
    </div>

    <div class="form-group">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            @Html.RadioButton("PreDefinedAcc", "Yes", true) @Html.Label("Use Predefined Account")
            <br />
            @Html.RadioButton("PreDefinedAcc", "No", false) @Html.Label("Don't Use Predefined Account")
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-1 col-md-10">
            <input type="submit" value="Make Transaction" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
